<%= simple_form_for(@aeronave) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nome %>
    <%= f.input :numero_tripulantes %>
    <%= f.input :tamanho %>
    <%= f.input :numero %>
    <%= f.input :chassi %>
    <%= f.input :quantidade_horas_voo %>
    <%= f.input :quantidade_motor %>
  </div>


  <div class="form-actions text-center"> 
    <%= f.button :submit %>
  </div>
<% end %>

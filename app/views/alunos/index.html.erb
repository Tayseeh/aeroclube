<p id="notice"><%= notice %></p>

<h1 class="text-center">LISTA DE ALUNOS</h1>


<table class="table">
  <thead>
    <tr>
      <th scope="col">NOME</th>
      <th scope="col">SOBRENOME</th>
      <th scope="col">CPF</th>
      <th scope="col">ENDEREÇO</th>
      <th scope="col">PROFISSÃO</th>
      <th scope="col">E-MAIL</th>
      <th scope="col">CNH</th>
      <th scope="col">INSTITUIÇÃO</th>
      <th scope="col">CURSO</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @alunos.each do |aluno| %>
      <tr>
      <th scope="row"></th>
        <td><%= aluno.nome %></td>
        <td><%= aluno.sobrenome %></td>
        <td><%= aluno.cpf %></td>
        <td><%= aluno.endereco %></td>
        <td><%= aluno.profissao %></td>
        <td><%= aluno.email %></td>
        <td><%= aluno.cnh %></td>
        <td><%= aluno.instituicao %></td>
        <td><%= aluno.curso %></td>
        <td><%= link_to 'Show', aluno %></td>
        <td><%= link_to 'Edit', edit_aluno_path(aluno) %></td>
        <td><%= link_to 'Destroy', aluno, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>


<br> 
<p class="text-center"><%= link_to 'NOVO ALUNO', new_aluno_path, class: ' btn btn-primary btn-lg' %></p>

